<% if @o_single.errors.any? %>
  $("#div_update_form").html("<%= escape_javascript(render("form")) %>");
<% else %>
var client = new Faye.Client('http://localhost:9292/faye');
client.publish('/admin/schools/<%= @o_single.id %>/edit', {
  sid: '<%= @o_single.id %>'
});

client.publish('/admin_schools', { text: 'admin/schools' });

client.publish('/schools', { text: 'schools' });

<% end %>
